<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MisLukas.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MisLukas.Views.Modals.LoginView"
        x:DataType="viewModels:LoginViewModel"
        Title="SeleccionarUsuario">
    
    <Design.DataContext>
        <viewModels:LoginViewModel/>
    </Design.DataContext>
    
    <Grid ColumnDefinitions="*,*">
        <TextBlock Grid.Column="0" Text="{Binding Text}" />
        <Button Grid.Column="1" Command="{Binding LoginCommand}"/>
    </Grid>
    
</Window>
