<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MisLukas.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MisLukas.Views.LoginView"
             x:DataType="viewModels:LoginViewModel">
    
    <Design.DataContext>
        <viewModels:LoginViewModel/>
    </Design.DataContext>
    
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="#2C3E50">
        <Border CornerRadius="8"
                Padding="30"
                BoxShadow="0 4 8 4 #40000000"
                MinWidth="350">
            <StackPanel Spacing="15">
                <TextBlock Text="Inicio de Sesión"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBox Text="{Binding Username}"
                         Watermark="Nombre de usuario"/>

                <TextBox Text="{Binding Password}"
                         Watermark="Contraseña"
                         PasswordChar="*"/>
                <Label IsVisible="{Binding ShowWarningLabel}" Content="{Binding WarningLabel}"/>

                <Button Content="Iniciar Sesión"
                        Command="{Binding LoginCommand}"
                        HorizontalAlignment="Stretch"/>
                <Separator />
                <Button Content="Registrar Usuario"
                        Command="{Binding RegisterCommand}"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
